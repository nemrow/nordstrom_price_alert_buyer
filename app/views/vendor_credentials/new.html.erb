<h1>New Vendor Credential</h1>

<%= form_for :vendor_credential, :url => {:action => "create"} do |f| %>
  <label>Select Vendor: </label>
  <%= f.select("vendor_id", @vendors_for_select, { include_blank: true }) %><br>
  <label>Login Username for Vendor: </label>
  <%= f.text_field "username" %><br>
  <label>Login Password for Vendor: </label>
  <%= f.password_field "password" %><br>
  <%= f.submit "Add Vendor Credentials" %>
<% end %>
